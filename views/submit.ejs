<% include header.ejs %>
<div class="pure-g">
<div class="pure-u-1-4">
  <form id="postForm" action="/submit" method="post" enctype="application/x-www-form-urlencoded" class="pure-form pure-form-stacked" style="max-width:250px">
    <fieldset>
      <legend>Submit your own recipe!</legend>
      <textarea name="recipe" rows="10" cols="25">
      </textarea>
      <br>
      <button type="submit" class="pure-button pure-button-primary">Submit</button>
    </fieldset>
  </form>
</div>
<div class="pure-u-3-4">
  <div class="output">
    <pre>
<%=req %><br>
<%=res %>      
    </pre>
  </div>
</div>
